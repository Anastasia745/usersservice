@model UsersService.Models.User

<h2>Добавление пользователя</h2>
<form asp-action="Create" asp-controller="Home">
    <p>
        <label asp-for="Name">Имя</label><br />
        <input type="text" asp-for="Name" />
    </p>
    <p>
        <label asp-for="LastName">Фамилия</label><br />
        <input type="text" asp-for="LastName" />
    </p>
    <p>
        <label asp-for="Age">Возраст</label><br />
        <input type="number" asp-for="Age" />
    </p>
    <p>
        <label asp-for="Email">Email</label><br />
        <input type="text" asp-for="Email" />
    </p>
    <p>
        <input type="submit" value="Добавить" />
    </p>
</form>